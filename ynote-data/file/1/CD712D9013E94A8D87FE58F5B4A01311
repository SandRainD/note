    public Demo(){
        setTitle();设置窗体标题
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);//关闭窗体，停止程序
        setBounds(int,int,int,int);//窗体位置和大小
        Container c=getContentPane();//获取窗体的容器
        
        JLable l=new JLable("这是一个标签");
        l.setText("修改标签的内容");
        l.getText();//获取标签内容
        l.setFont(new Font("微软雅黑",Font.BOLD,15));//更改字体，样式，大小
        l.setForeground(Color.RED);//更改前景色，即字体颜色
        c.add(l);
        
        setVisible(true);//设置窗体可见
    }
    public void static main(String[] args){
        new Demo();
    }
}
