    public Demo(){
        setTitle();设置窗体标题
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);//关闭窗体，停止程序
        setBounds(int,int,int,int);//窗体位置和大小
        Container c=getContentPane();//获取窗体的容
        c.setLayout(new FlowLayout());
        
        JCheckBox c1=new JCheckBox("1");
        JCheckBox c2=new JCheckBox();
        JCheckBox c3=new JCheckBox();
        
        c1.setSelected(true);//设置默认选中
        
        c.add(c1);
        c.add(c2);
        c.add(c3);
        
        //btn............
        c1.getText();//获得文本值
        c1.isSelected();//获取c1的选中状态
           
        setVisible(true);//设置窗体可见
    }
    public void static main(String[] args){
        new Demo();
    }
}
